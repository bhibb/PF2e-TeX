\usepackage{graphicx}

%
% Actions, Reactions, and things like that
%
\newcommand{\actionIcon}[1][1.0]{\pfInlineArt[#1]{lib/book/img/Action}}
\newcommand{\activityTwoIcon}[1][1.0]{\pfInlineArt[#1]{lib/book/img/Activity2}}
\newcommand{\activityThreeIcon}[1][1.0]{\pfInlineArt[#1]{lib/book/img/Activity3}}
\newcommand{\freeActionIcon}[1][1.0]{\pfInlineArt[#1]{lib/book/img/FreeAction}}
\newcommand{\reactionIcon}[1][1.0]{\pfInlineArt[#1]{lib/book/img/Reaction}}

%
% Actions & Activities
%
\newenvironment{pf-action}[1]{%
  \onehalfspacing%
  \actionIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

\newenvironment{pf-activity2}[1]{%
  \onehalfspacing%
  \activityTwoIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

\newenvironment{pf-activity3}[1]{%
  \onehalfspacing%
  \activityThreeIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

\newenvironment{pf-freeaction}[1]{%
  \onehalfspacing%
  \freeActionIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

\newenvironment{pf-reaction}[1]{%
  \onehalfspacing%
  \reactionIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}
