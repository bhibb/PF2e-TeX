  {\unskip}%
}{\par}

\newenvironment{pf-freeaction}[1]{%
  \noindent\freeActionIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

\newenvironment{pf-reaction}[1]{%
  \noindent\reactionIcon\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
}{\par}

